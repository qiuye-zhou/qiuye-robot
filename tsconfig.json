{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~": ["./src"],
      "~/*": ["./src/*"],
      "config": ["src/config.ts"]
    }
  }
}
